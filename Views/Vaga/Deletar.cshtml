@model Vaga

<form class="mt-2" asp-action="Deletar">
    <div class="mt-3">
        <div class="mb-3 row">
            <p>@Html.DisplayNameFor(model => model.Nome): @Html.DisplayFor(model => model.Nome)</p>
        </div>

        <div class="mb-3 row">
            <p>@Html.DisplayNameFor(model => model.Andar): @Html.DisplayFor(model => model.Andar)</p>
        </div>

        <div class="mb-3 row">
            <p>@Html.DisplayNameFor(model => model.Status): @Html.DisplayFor(model => model.Status)</p>
        </div>

        <div class="mb-3 row">
            <p>Código do Estacionamento: @Html.DisplayFor(model => model.Estacionamento.Id)</p>
        </div>

        <div class="mb-3 row">
            <p>Nome do Estacionamento: @Html.DisplayFor(model => model.Estacionamento.Nome)</p>
        </div>

    </div>

    <button type="submit" class="btn btn-danger">Remover</button>
    <a class="mt-2" asp-action="Listar">Voltar para Lista</a>
</form>
